# Hash Shell Configuration File (~/.hashrc)
# This file is loaded automatically when hash starts

# ============================================================================
# SHELL OPTIONS
# ============================================================================

# Enable or disable colors
set colors=on

# Show welcome message on startup
set welcome=on

# ============================================================================
# HISTORY CONFIGURATION
# ============================================================================

# Number of commands to keep in memory (default: 1000, -1 = unlimited)
export HISTSIZE=10000

# Number of commands to keep in history file (default: 2000, -1 = unlimited)
export HISTFILESIZE=20000

# History control (ignorespace, ignoredups, ignoreboth, erasedups)
export HISTCONTROL=ignoreboth

# Custom history file location (optional)
# export HISTFILE=~/.my_custom_history

# ============================================================================
# PROMPT CUSTOMIZATION
# ============================================================================

# Default: Full path with git integration and exit code indicator
# set PS1='\w\g \e#>\e '

# Compact: Just current directory name with git
# set PS1='\W\g \e#>\e '

# Classic: User@host:path $
# set PS1='\u@\h:\w\g \$ '

# Two-line: Path on top, prompt below
# set PS1='\w\g\n\e#>\e '

# Minimal: Just directory and prompt
# set PS1='\W #> '

# Simple with git: Absolute path and git status
set PS1='\w\g \e#>\e'

# ============================================================================
# ENVIRONMENT VARIABLES
# ============================================================================

# Note: Variable expansion is now supported!
# You can use $VAR and ${VAR} syntax

# Set default editor
export EDITOR=vim

# Set your preferred pager
export PAGER=less

export PATH=$HOME/bin:/usr/local/bin:$HOME/go/bin:$PATH

# Note: Tilde expansion is also supported
# You can use ~ in aliases and commands
# Example: alias docs='cd ~/Documents'

# ============================================================================
# ALIASES
# ============================================================================

# ls variations
alias ll='ls -lah'
alias la='ls -A'
alias l='ls -CF'

# Git shortcuts
# Git shortcuts
alias ga='git add'
alias gb='git branch'
alias gc='git commit -m'
alias gcssm='git commit --gpg-sign --signoff --message'
alias gcb='git checkout -b'
alias gd='git diff'
alias gl='git log --oneline'
alias gp='git push'
alias gpl='git pull'
alias gpo='git push origin'
alias gs='git status'

# Docker shortcuts (if you use Docker)
# alias dps='docker ps'
# alias dimg='docker images'
# alias dexec='docker exec -it'

# Kubernetes shortcuts (if you use k8s)
# alias k='kubectl'
# alias kgp='kubectl get pods'
# alias kgs='kubectl get services'

# System monitoring
alias ports='netstat -tulanp'
alias meminfo='free -m -l -t'
alias cpuinfo='lscpu'

# Network
alias myip='curl ifconfig.me'

# Development shortcuts
alias py='python3'
alias serve='python3 -m http.server'

# Quick edits
alias vimrc='vim ~/.vimrc'
alias hashrc='vim ~/.hashrc'
alias shashrc='source ~/.hashrc'
