#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	$(MAKE) CC=gcc CFLAGS="-Wall -Wextra -O2 -std=gnu99"

override_dh_auto_install:
	install -D -m 755 hash-shell $(CURDIR)/debian/hash-shell/usr/bin/hash-shell
	install -D -m 644 examples/.hashrc $(CURDIR)/debian/hash-shell/usr/share/hash-shell/hashrc.example
	install -D -m 644 README.md $(CURDIR)/debian/hash-shell/usr/share/doc/hash-shell/README.md

override_dh_auto_clean:
	$(MAKE) clean || true
